#compdef _robo robo

function _robo {
    _arguments -C \
        "1: :_robo_get_command_list" \
        "2: :_files" \
        "*::arg:->args"
}
	
function _robo_get_command_list {
    if type "robo" > /dev/null; then
        compadd `robo \
        	| sed "1,/Available commands/d" \
    	    | awk '/^ +[a-z:]+/ { print $1 }'`
    fi
}

